{
	"name": "rewind",
	"version": "1.0.0",
	"description": "Social media app for music lovers",
	"main": "index.js",
	"scripts": {
		"start": "nodemon dist/app.js",
		"lint": "eslint --ext .ts --config .eslintrc.json ./server/**/*.ts",
		"lint-fix": "eslint --ext .ts --config .eslintrc.json ./server/**/*.ts --fix",
		"prettier-check": "prettier --check **/*.{js,jsx,ts,tsx,json} --ignore-path .gitignore",
		"prettier-format": "prettier --write **/*.{js,jsx,ts,tsx,json} --ignore-path .gitignore",
		"server-lock": "netstat -punta | grep 3000 \n echo \"Now use kill -9 <pid>\"",
		"testscript": "mocha --require ts-node/register server/tests/**/*.test.ts",
		"test": "echo '\u001b[32mStarting the tests\u001b[0m' && sleep 3 && prettier --write **/*.{js,jsx,ts,tsx,json} --ignore-path .gitignore && echo '\u001b[32mPrettier formatting completed\u001b[0m'&& sleep 3 && eslint --ext .ts --config .eslintrc.json ./server/**/*.ts --fix && echo '\u001b[32mESlint linting Completed\u001b[0m' && sleep 3 &&  mocha --require ts-node/register server/tests/**/*.test.ts",
		"echo": "echo '\u001b[32mPrettier file formatting Completed\u001b[0m'"
	},
	"author": "",
	"license": "ISC",
	"dependencies": {
		"@socket.io/mongo-adapter": "^0.3.0",
		"axios": "^1.3.4",
		"body-parser": "^1.20.2",
		"chai-http": "^4.3.0",
		"cors": "^2.8.5",
		"dotenv": "^16.0.3",
		"express": "^4.18.2",
		"fs": "^0.0.1-security",
		"http": "^0.0.1-security",
		"jsonwebtoken": "^9.0.0",
		"mongoose": "^7.0.1",
		"morgan": "^1.10.0",
		"multer": "^1.4.5-lts.1",
		"node-cron": "^3.0.2",
		"qs": "^6.11.1",
		"socket.io": "^4.6.1",
		"supertest": "^6.3.3",
		"uuid": "^9.0.0"
	},
	"devDependencies": {
		"@types/chai": "^4.3.4",
		"@types/express": "^4.17.17",
		"@types/jsonwebtoken": "^9.0.1",
		"@types/mocha": "^10.0.1",
		"@types/morgan": "^1.9.4",
		"@types/multer": "^1.4.7",
		"@types/node-cron": "^3.0.7",
		"@types/supertest": "^2.0.12",
		"@types/uuid": "^9.0.1",
		"@typescript-eslint/eslint-plugin": "^5.55.0",
		"chai": "^4.3.7",
		"eslint": "^8.36.0",
		"mocha": "^10.2.0",
		"nodemon": "^2.0.21",
		"prettier": "^2.8.7",
		"ts-node": "^10.9.1",
		"typescript": "^4.9.5"
	}
}
